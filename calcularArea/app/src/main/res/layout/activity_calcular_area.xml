<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".CalcularArea"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnRectangulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/AreaRectangulo"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:backgroundTint="@color/Ligth1"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnTriangulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/AreaTriangulo"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:backgroundTint="@color/Ligth2"
        android:textColor="@color/black"/>
</LinearLayout>